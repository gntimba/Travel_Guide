<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="11dp"
        android:text="name last name" />

    <RatingBar
        android:id="@+id/ratingReview"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:numStars="5"
        android:stepSize="1"
        android:theme="@style/RatingBar"
        android:layout_alignBottom="@+id/fulldate"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/fulldate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017/11/07 13:58"
        android:layout_alignBaseline="@+id/fullname"
        android:layout_alignBottom="@+id/fullname"
        android:layout_toStartOf="@+id/ratingReview"
        android:layout_marginEnd="17dp" />

    <TextView
        android:id="@+id/reviewComent"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Comments"
        android:textStyle="bold|italic"
        android:layout_below="@+id/ratingReview"
        android:layout_alignStart="@+id/fullname" />

</RelativeLayout>